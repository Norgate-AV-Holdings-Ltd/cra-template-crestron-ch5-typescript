{
    "package": {
        "dependencies": {
            "@crestron/ch5-crcomlib": "^1.2.0",
            "@crestron/ch5-webxpanel": "^1.2.5",
            "@testing-library/jest-dom": "^5.11.4",
            "@testing-library/react": "^11.1.0",
            "@testing-library/user-event": "^12.1.10",
            "@types/jest": "^26.0.15",
            "@types/node": "^12.0.0",
            "@types/node-sass": "^4.11.1",
            "@types/react": "^17.0.0",
            "@types/react-dom": "^17.0.0",
            "@types/react-router-dom": "^5.1.7",
            "@types/styled-components": "^5.1.9",
            "node-sass": "^6.0.0",
            "react-router-dom": "^5.2.0",
            "styled-components": "^5.3.0",
            "typescript": "^4.1.2"
        },
        "scripts": {
            "clean:build": "rimraf build",
            "clean:dist": "rimraf dist",
            "clean:all": "yarn clean:build && yarn clean:dist",
            "copylib": "ncp ./node_modules/@crestron/ch5-crcomlib/build_bundles/umd/cr-com-lib.js public/cr-com-lib.js",
            "start": "npm run copylib && react-scripts start",
            "build": "yarn clean:build && npm run copylib && react-scripts build",
            "serve": "serve -s build",
            "build-and-serve": "yarn build && yarn serve",
            "build:archive": "yarn clean:dist && yarn ch5-cli archive -p ch5-react -P samplesource=ch5-react -d build -o dist",
            "build:deploy": "yarn ch5-cli deploy -p -H panel -t touchscreen dist/ch5-react.ch5z",
            "build:onestep": "yarn build && yarn build:archive && yarn build:deploy"
        },
        "eslintConfig": {
            "extends": ["react-app", "react-app/jest"]
        },
        "crestron": {
            "project": {
                "touchscreen": {
                    "url": ""
                }
            },
            "crcomlib": {
                "root": "./node_modules/@crestron/ch5-crcomlib",
                "packageJson": "./node_modules/@crestron/ch5-crcomlib/package.json",
                "bundle": {
                    "name": "cr-com-lib.js",
                    "path": {
                        "umd": "./node_modules/@crestron/ch5-crcomlib/build_bundles/umd/cr-com-lib.js",
                        "cjs": "./node_modules/@crestron/ch5-crcomlib/build_bundles/cjs/cr-com-lib.js"
                    }
                }
            }
        },
        "devDependencies": {
            "@crestron/ch5-utilities-cli": "^0.1.52",
            "@types/ncp": "^2.0.5",
            "@types/rimraf": "^3.0.2",
            "ncp": "^2.0.0",
            "rimraf": "^3.0.2"
        }
    }
}
